<?xml version="1.0"?>
<PropertyList>
    <name>aircraft-options</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Bell-412 Options</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    <hrule/>
    <group>
        <layout>vbox</layout>
        <padding>6</padding>
        <group>
            <layout>vbox</layout>
            <checkbox>
                <halign>left</halign>
                <label>Shake me honey</label>
				<property>controls/options/shake</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </checkbox>
        </group>
        <hrule/>
    </group>
    <hrule/>
</PropertyList>
