<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>3dshadow-als.ac</path>
	<nopreview/>
	<offsets>
		<pitch-deg>0</pitch-deg>
		<z-m>-1.10</z-m>
	</offsets>
	<animation>
		<object-name>9.Fuselage-Shadow</object-name>
		<type>select</type>
		<condition>
			<and>
				<not><property>/sim/rendering/rembrandt/enabled</property></not>
				<property>/sim/rendering/shaders/skydome</property>
				<!-- <property>/sim/rendering/shadow-volume</property> -->
			</and>
		</condition>
	</animation>
	<effect>
		<inherits-from>Effects/shadow-vol</inherits-from>
		<object-name>9.Fuselage-Shadow</object-name>
	</effect>
	<animation>
		<type>noshadow</type>
		<object-name>9.Fuselage-Shadow</object-name>
	</animation>
	<!-- pitch -->
	<animation>
		<type>rotate</type>
		<object-name>9.Fuselage-Shadow</object-name>
		<property>/orientation/pitch-deg</property>
		<factor>-1.0</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<!-- roll -->
	<animation>
		<type>rotate</type>
		<object-name>9.Fuselage-Shadow</object-name>
		<property>/orientation/roll-deg</property>
		<factor>1.0</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
</PropertyList>
