<?xml version="1.0"?>
<!--
-->

<PropertyList>
	<gauge>
		<name>Aileron</name>
		<x>-50</x>
		<y>110</y>
		<width>100</width>
		<height>14</height>
		<option>notext</option>
		<option>bottom</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<tick-bottom>false</tick-bottom>
		<tick-top>false</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/roll</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>

	<gauge>
		<name>Elevator</name>
		<x>-140</x>
		<y>-50</y>
		<width>14</width>
		<height>100</height>
		<option>vertical</option>
		<option>right</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<tick-bottom>true</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>true</cap-left>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/pitch</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Elevator Trim</name>
		<x>-150</x>
		<y>-50</y>
		<width>10</width>
		<height>100</height>
		<option>left</option>
		<option>vertical</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/pitch-trim</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>

	<gauge>
		<name>Rudder</name>
		<x>-60</x>
		<y>-160</y>
		<width>120</width>
		<height>14</height>
		<option>top</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<tick-bottom>false</tick-bottom>
		<tick-top>false</tick-top>
		<tick-right>true</tick-right>
		<tick-left>true</tick-left>
		<cap-bottom>true</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/yaw</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Rudder Trim</name>
		<x>-60</x>
		<y>-172</y>
		<width>120</width>
		<height>12</height>
		<option>bottom</option>
		<option>horizontal</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/yaw-trim</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>

	<gauge>
		<name>Throttle</name>
		<x>-170</x>
		<y>-100</y>
		<width>12</width>
		<height>200</height>
		<option>vertical</option>
		<option>right</option>
		<option>notext</option>
		<major-divisions>10</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/engines/engine/throttle</property>
			<factor>-1.0</factor>
			<min>-1.0</min>
			<max>-0.0</max>
		</input>
	</gauge>
</PropertyList>
