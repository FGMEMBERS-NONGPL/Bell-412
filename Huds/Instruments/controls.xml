<?xml version="1.0"?>

<PropertyList>
	<gauge>
		<name>Aileron</name>
		<x>-75</x>
		<y>140</y>
		<width>150</width>
		<height>16</height>
		<option>notext</option>
		<option>bottom</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<tick-bottom>false</tick-bottom>
		<tick-top>false</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/roll</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Elevator</name>
		<x>-160</x>
		<y>-50</y>
		<width>20</width>
		<height>100</height>
		<option>vertical</option>
		<option>right</option>
		<option>notext</option>
		<major-divisions>1</major-divisions>
		<minor-divisions>1</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/pitch</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Elevator Trim</name>
		<x>-170</x>
		<y>-50</y>
		<width>10</width>
		<height>100</height>
		<option>left</option>
		<option>vertical</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/pitch-trim</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	
	<gauge>
		<name>Rudder</name>
		<x>-75</x>
		<y>-160</y>
		<width>150</width>
		<height>14</height>
		<option>top</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/yaw</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Rudder Trim</name>
		<x>-75</x>
		<y>-170</y>
		<width>150</width>
		<height>10</height>
		<option>bottom</option>
		<option>horizontal</option>
		<option>notext</option>
		<cap-top>true</cap-top>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/flight/servos/yaw-trim</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>
	<gauge>
		<name>Throttle</name>
		<x>-200</x>
		<y>-75</y>
		<width>20</width>
		<height>150</height>
		<option>vertical</option>
		<option>right</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>controls/engines/engine/throttle</property>
			<factor>-1.0</factor>
			<min>-1.0</min>
			<max>-0.0</max>
		</input>
	</gauge>

	<gauge>
		<name>vspeed</name>
		<x>160</x>
		<y>-50</y>
		<width>20</width>
		<height>100</height>
		<option>vertical</option>
		<option>right</option>
		<option>notext</option>
		<major-divisions>5</major-divisions>
		<minor-divisions>1</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>instrumentation/vertical-speed-indicator/indicated-speed-mps</property>
			<min>-5</min>
			<max>5</max>
		</input>
	</gauge>
	<gauge>
		<name>galtimeter</name>
		<x>200</x>
		<y>-75</y>
		<width>20</width>
		<height>150</height>
		<option>vertical</option>
		<option>left</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>position/gear-agl-ft</property>
			<min>0</min>
			<max>100</max>
		</input>
	</gauge>

