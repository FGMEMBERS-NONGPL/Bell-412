<?xml version="1.0"?>

<PropertyList>
	<turn-bank-indicator>
		<name>Turn Bank Indicator</name>
		<x>-60</x>
		<width>120</width>
		<height>40</height>

		<bank-input>
			<property>orientation/roll-deg</property>
		</bank-input>

		<sideslip-input>
			<property>orientation/side-slip-deg</property>
		</sideslip-input>

		<gap-width>5</gap-width>
		<bank-scale>true</bank-scale>
		<bank-scale-radius>250</bank-scale-radius>
	</turn-bank-indicator>
</PropertyList>
