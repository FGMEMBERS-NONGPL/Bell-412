	<!-- knob / dimmer pilotlt  -->
	<animation>
		<type>knob</type>
		<object-name>5.Cockpit Panel OH Control Light PilotInstr</object-name>
		<property>controls/lighting/switches/pilotlt</property>
		<!-- <factor>1000</factor> -->
		<center>
			<x-m>-2.26212</x-m>
			<y-m>0.13251</y-m>
			<z-m>0.99008</z-m>
		</center>  
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<interpolation> 
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>		
			<entry>
				<ind>1</ind>
				<dep>250</dep>
			</entry>
		</interpolation>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/lighting/switches/pilotlt</property>
				<factor>0.1</factor>
				<min>0</min>
				<max>1</max>                
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
</PropertyList>
