<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
	<path>controls.ac</path>
	<!-- Beacon -->	
	<animation>
		<type>rotate</type>
		<object-name>5.Cockpit Panel OH Control Beacon</object-name>
		<property>controls/lighting/switches/beacon</property>
		<interpolation> 
			<entry>
				<ind>0</ind>
				<dep>-10</dep>
			</entry>		
			<entry>
				<ind>1</ind>
				<dep>35</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>-2.31331</x-m>
			<y-m>0.14085</y-m>
			<z-m>0.99842</z-m>
		</center>  
	</animation>

	<animation>
		<type>pick</type>
		<object-name>5.Cockpit Panel OH Control Beacon</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>/controls/lighting/switches/beacon</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>/sim/sound/switch</property>
			</binding>
		</action>
		<!--
		<hovered> TODO
