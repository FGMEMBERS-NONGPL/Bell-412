<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
	<path>lights.ac</path>

	<!-- Beacons -->
	<animation>
		<name>beacons</name>
		<object-name>7.Light Gyro Bottom On</object-name>
		<object-name>7.Light Gyro Top On</object-name>
	</animation>

	<animation>
		<type>select</type>
		<object-name>beacons</object-name>
		<condition>
			<and>
				<property>sim/multiplay/generic/int[8]</property>	<!-- beacon state alias to /controls/lighting/beacon-state/state -->
				<property>sim/multiplay/generic/int[10]</property>	<!-- bat buses state alias to /controls/electrical/buses -->
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>7.Lights Gyro Glow</object-name>
		<condition>
			<and>
				<not><property>/sim/rendering/rembrandt/enabled</property></not>
				<property>sim/multiplay/generic/int[8]</property>	<!-- beacon state alias to /controls/lighting/beacon-state/state -->
				<property>sim/multiplay/generic/int[10]</property>	<!-- bat buses state alias to /controls/electrical/buses -->
			</and>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>beacons</object-name>
		<condition>
			<property>sim/multiplay/generic/int[8]</property>
		</condition>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>

	<!-- Nav -->
	<animation>
		<name>navlights</name>
		<object-name>7.Light Nav Middle Left On</object-name>
		<object-name>7.Light Nav Middle Right On</object-name>
		<object-name>7.Light Nav MiddleTop Left On</object-name>
		<object-name>7.Light Nav MiddleTop Right On</object-name>
		<object-name>7.Lights Nav Tail Left On</object-name>
		<object-name>7.Lights Nav Tail Right On</object-name>
	</animation>
	<animation>
		<name>navglow</name>
		<object-name>7.Lights Nav Green Glow</object-name>
		<object-name>7.Lights Nav Red Glow</object-name>
		<object-name>7.Lights Nav White Glow</object-name>
	</animation>

	<animation>
		<type>select</type>
		<object-name>navlights</object-name>
		<condition>
			<and>
				<property>sim/multiplay/generic/int[9]</property>	<!-- nav state alias to /controls/lighting/nav -->
				<property>sim/multiplay/generic/int[10]</property>	<!-- bat buses state alias to /controls/electrical/buses -->
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>navglow</object-name>
		<condition>
			<and>
				<not><property>/sim/rendering/rembrandt/enabled</property></not>
				<property>sim/multiplay/generic/int[9]</property>
				<property>sim/multiplay/generic/int[10]</property>	<!-- bat buses state alias to /controls/electrical/buses -->
			</and>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>navlights</object-name>
		<condition>
			<property>sim/multiplay/generic/int[9]</property>
		</condition>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
		</emission>
	</animation>
</PropertyList>
