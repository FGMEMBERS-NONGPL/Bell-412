		<axis>
			<x> 1 </x>
			<y> 0 </y>
			<z> 0 </z>
		</axis>
		<center>
			<x-m>  0.05408 </x-m>
			<y-m>  0.00062 </y-m>
			<z-m>  0.00523 </z-m>
		</center>
	</animation>  
	
