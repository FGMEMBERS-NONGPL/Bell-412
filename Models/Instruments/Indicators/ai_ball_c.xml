            <entry><ind>30</ind><dep>31</dep></entry>
            <entry><ind>40</ind><dep>41</dep></entry>
            <entry><ind>50</ind><dep>50</dep></entry>
            <entry><ind>999</ind><dep>50</dep></entry>
