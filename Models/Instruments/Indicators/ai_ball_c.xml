		<axis>
			<x> 0 </x>
			<y> 1 </y>
			<z> 0 </z>
		</axis>
		<center>
			<x-m>  -0.05408 </x-m>
			<y-m>  0.00062 </y-m>
			<z-m>  0.00523 </z-m>
		</center>
	</animation>  
	<effect>
		<inherits-from>Aircraft/Bell-412/Effects/instruments-2c-lights</inherits-from>
		<object-name>5.Cockpit Panel Main Instruments AI Ball</object-name>
