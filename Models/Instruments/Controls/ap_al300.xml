<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
	<path>ap_al300.ac</path>

	<!-- 
		 General settings
	-->
	<animation>
		<object-name>5.Cockpit Panel Main Control AL300</object-name>
		<object-name>al300.d0</object-name>
		<object-name>al300.d1</object-name>
		<object-name>al300.d2</object-name>
		<object-name>al300.d3</object-name>
		<object-name>al300.d4</object-name>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>al300.d0</object-name>
		<object-name>al300.d1</object-name>
		<object-name>al300.d2</object-name>
		<object-name>al300.d3</object-name>
		<object-name>al300.d4</object-name>
	</animation>
	<!-- 
		 Selection
	-->
	<animation>
		<type>select</type>
		<object-name>al300.d0</object-name>
		<object-name>al300.d1</object-name>
		<object-name>al300.d2</object-name>
		<object-name>al300.d3</object-name>
		<object-name>al300.d4</object-name>
		<condition>
			<property>instrumentation/al300/serviceable</property>
		</condition>
	</animation>
	<!-- 
		 Lighting
	-->
	<animation>
		<type>material</type>
		<object-name>al300.d0</object-name>
		<object-name>al300.d1</object-name>
		<object-name>al300.d2</object-name>
		<object-name>al300.d3</object-name>
		<object-name>al300.d4</object-name>
		<condition>
			<property>instrumentation/al300/serviceable</property>
    	</condition>
		<ambient>
			<red>0.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>0.1</red>
			<green>0.8</green>
			<blue>0.0</blue>
		</emission>
	</animation>
	<!-- 
		 Texture Translation
	-->
	<!-- Digit# From right to left -->
    <animation>
        <type>textranslate</type>
		<object-name>al300.d0</object-name>
		<property>instrumentation/al300/digit[0]</property>
        <step>1</step>
        <factor>0.0254</factor>
        <bias>0.0</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
    <animation>
        <type>textranslate</type>
		<object-name>al300.d1</object-name>
		<property>instrumentation/al300/digit[1]</property>
        <step>1</step>
        <factor>0.0254</factor>
        <bias>0.0</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
    <animation>
        <type>textranslate</type>
		<object-name>al300.d2</object-name>
		<property>instrumentation/al300/digit[2]</property>
        <step>1</step>
        <factor>0.0254</factor>
        <bias>0.0</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
    <animation>
        <type>textranslate</type>
		<object-name>al300.d3</object-name>
		<property>instrumentation/al300/digit[3]</property>
        <step>1</step>
        <factor>0.0254</factor>
        <bias>0.0</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
    <animation>
        <type>textranslate</type>
		<object-name>al300.d4</object-name>
		<property>instrumentation/al300/digit[4]</property>
        <step>1</step>
        <factor>0.0254</factor>
        <bias>0.0</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
	<!-- 
		 Controls
	-->
</PropertyList>
