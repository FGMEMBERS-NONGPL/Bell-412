        <factor>1</factor>
        <bias>0.0001</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>NavUse10K</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>0.01</step>
        <factor>10</factor>
        <bias>0.0001</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
	</animation>
	
