<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
	<path>generic_nav.ac</path>

	<!-- 
		 General settings
	-->
	<animation>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav display</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav ledchan</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav ledinrange</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_khz</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_mhz</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_swap</object-name>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_volume</object-name>
        <object-name>NavUse10K</object-name>
        <object-name>NavUse100K</object-name>
        <object-name>NavUse1M</object-name>
        <object-name>NavUse10M</object-name>
        <object-name>NavUse100M</object-name>
        <object-name>NavUseDot</object-name>
        <object-name>NavStby10K</object-name>
        <object-name>NavStby100K</object-name>
        <object-name>NavStby1M</object-name>
        <object-name>NavStby10M</object-name>
        <object-name>NavStby100M</object-name>
        <object-name>NavStbyDot</object-name>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>NavUse10K</object-name>
		<object-name>NavUse100K</object-name>
		<object-name>NavUse1M</object-name>
		<object-name>NavUse10M</object-name>
		<object-name>NavUse100M</object-name>
		<object-name>NavUseDot</object-name>
        <object-name>NavStby10K</object-name>
        <object-name>NavStby100K</object-name>
        <object-name>NavStby1M</object-name>
        <object-name>NavStby10M</object-name>
        <object-name>NavStby100M</object-name>
        <object-name>NavStbyDot</object-name>
	</animation>

	<effect>
    	<inherits-from>Effects/model-transparent</inherits-from>
    	<condition>
      		<property>sim/rendering/rembrandt/enabled</property>
    	</condition>
        <object-name>NavUse10K</object-name>
        <object-name>NavUse100K</object-name>
        <object-name>NavUse1M</object-name>
        <object-name>NavUse10M</object-name>
        <object-name>NavUse100M</object-name>
        <object-name>NavUseDot</object-name>
        <object-name>NavStby10K</object-name>
        <object-name>NavStby100K</object-name>
        <object-name>NavStby1M</object-name>
        <object-name>NavStby10M</object-name>
        <object-name>NavStby100M</object-name>
        <object-name>NavStbyDot</object-name>
	</effect>

	<!-- 
		 Animation
	-->
    <animation>
        <type>knob</type>
        <object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_volume</object-name>
		<property>instrumentation/adf[0]/volume</property>
        <factor>-250</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0006</x-m>
            <y-m>-0.0179</y-m>
            <z-m>-0.01886</z-m>
        </center>
        <action>
            <binding>
                <command>property-adjust</command>
				<property>instrumentation/adf[0]/volume</property>
                <factor>0.1</factor>
                <min>0.0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>com-volume</tooltip-id>
                <label>Volume: %3d%%</label>
				<property>instrumentation/adf[0]/volume</property>
                <mapping>percent</mapping>
            </binding>
        </hovered>
	</animation>

    <!-- Inner frequency (1 KHz) knob -->
	<animation>
		<type>knob</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_khz</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>-2.5</factor>
		<center>
			<x-m>0.00235</x-m>
			<y-m>0.01318</y-m>
			<z-m>-0.01886</z-m>
		</center>  
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/adf[0]/frequencies/standby-khz</property>
                <factor>1</factor>
                <min>200</min>
                <max>1800</max>
                <resolution>1</resolution>
                <wrap>true</wrap>
            </binding>
		</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>adf-khz</tooltip-id>
                <label>Freq: %3f</label>
				<property>instrumentation/adf[0]/frequencies/standby-khz</property>
            </binding>
		</hovered>
	</animation>

    <!-- Outer frequency (100 KHz) knob -->
	<animation>
		<type>knob</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_mhz</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <factor>-2.5</factor>
		<center>
			<x-m>0.00432</x-m>
			<y-m>0.01318</y-m>
			<z-m>-0.01886</z-m>
		</center>  
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/adf[0]/frequencies/standby-khz</property>
                <factor>100</factor>
                <min>200</min>
                <max>1800</max>
                <resolution>1</resolution>
                <wrap>true</wrap>
            </binding>
		</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>adf-khz</tooltip-id>
                <label>Freq: %3f</label>
				<property>instrumentation/adf[0]/frequencies/standby-khz</property>
            </binding>
		</hovered>
	</animation>
	
	<animation>
        <type>pick</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_swap</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
			<repeatable>false</repeatable>
            <binding>
				<command>property-assign</command>
        		<property>instrumentation/adf[0]/frq-swap-btn</property>
                <value type="int">1</value>
			</binding>
            <binding>
				<command>property-swap</command>
       			<property>instrumentation/adf[0]/frequencies/selected-khz</property>
				<property>instrumentation/adf[0]/frequencies/standby-khz</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
        			<property>instrumentation/adf[0]/frq-swap-btn</property>
                    <value type="int">0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>translate</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_swap</object-name>
        <property>instrumentation/adf[0]/frq-swap-btn</property>
        <factor>-0.004</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
	
	<!-- 
		 Lighting
	-->
	<animation>	<!-- TODO channel On -->
		<type>material</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav ledchan</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
    	</condition>
		<ambient>
			<red>0.8</red>
			<green>0.01</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.8</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>1.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav ledinrange</object-name>
		<condition>
			<and>
				<property>instrumentation/adf/powered</property>
				<property>instrumentation/adf[0]/in-range</property>
			</and>
    	</condition>
		<ambient>
			<red>0.8</red>
			<green>0.32</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.8</red>
			<green>0.32</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>1.0</red>
			<green>0.5</green>
			<blue>0.0</blue>
			<factor-prop>bell412/electrical/output/cluster[2]/ease</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav display</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
		</condition>
	</animation>

	<animation>
		<type>material</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav display</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
    	</condition>
		<ambient>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</ambient>
		<diffuse>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</diffuse>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>5.Cockpit Panel Pedestal Instruments r_nav sw_swap</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
    	</condition>
		<ambient>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</ambient>
		<diffuse>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</diffuse>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
        <object-name>NavUse10K</object-name>
        <object-name>NavUse100K</object-name>
        <object-name>NavUse1M</object-name>
        <object-name>NavUse10M</object-name>
        <object-name>NavUse100M</object-name>
        <object-name>NavUseDot</object-name>
        <object-name>NavStby10K</object-name>
        <object-name>NavStby100K</object-name>
        <object-name>NavStby1M</object-name>
        <object-name>NavStby10M</object-name>
        <object-name>NavStby100M</object-name>
        <object-name>NavStbyDot</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
    	</condition>
		<ambient>
			<red>0.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</ambient>
		<diffuse>
			<red>0.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</diffuse>
		<emission>
			<red>0.8</red>
			<green>0.4</green>
			<blue>0.0</blue>
			<factor-prop>bell412/electrical/output/cluster[2]/ease</factor-prop>
		</emission>
	</animation>

	<!-- 
		 LED Translation
	-->
	<!-- Use -->
	<animation>
		<type>select</type>
		<object-name>NavUse</object-name>
		<condition>
			<property>instrumentation/adf/powered</property>
		</condition>
	</animation>
    <animation>
        <type>textranslate</type>
        <object-name>NavUse100M</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>100</step>
        <factor>0.001</factor>
        <bias>0.0001</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>NavUse10M</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>10</step>
