<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
<fx>
	<!-- switch high pitch 'tick' -->
	<switch>
		<name>click on</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/click.wav</path>
		<condition>
			<property>/sim/sound/switch</property>
		</condition>
		<volume>
			<offset> 1 </offset>
		</volume>
		<pitch>
			<factor>1.2</factor>
		</pitch>
	</switch>
	<switch>
		<name>click off</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/click.wav</path>
		<condition>
			<not>
				<property>/sim/sound/switch</property>
			</not>
		</condition>
		<volume>
			<offset> 1 </offset>
		</volume>
		<pitch>
			<factor>1.2</factor>
		</pitch>
	</switch>
	<!-- switch button pushed -->
	<switch>
		<name>button on</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/switch2.wav</path>
		<condition>
			<property>/sim/sound/button</property>
		</condition>
		<volume>
			<offset>4.0 </offset>
		</volume>
	</switch>
	<switch>
		<name>button off</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/switch2.wav</path>
		<condition>
			<not>
				<property>/sim/sound/button</property>
			</not>
		</condition>
		<volume>
			<offset>4.0</offset>
		</volume>
		<pitch>
			<factor>0.75</factor>
		</pitch>
	</switch>

	<!-- power startup and air cond. -->
	<power>
		<name>powerup</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/powerOn.wav</path>
		<condition>
			<greater-than>
				<property>/bell412/power/buses/soundstate</property>
				<value>0</value>
			</greater-than>
		</condition>
		<reference-dist>3</reference-dist>
		<max-dist>50</max-dist>
		<volume>
			<offset> 2.2 </offset>
		</volume>
		<pitch>
			<property>/bell412/power/buses/soundstate</property>
			<factor>1</factor>
			<offset>0.0</offset>
			<max>1</max>
		</pitch>
	</power>
	<!--			TODO : air switch hi/low
	<power>
		<name>air conditioner</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/air_cond.wav</path>
		<condition>
			<greater-than>
				<property>/sim/sound/power</property>
				<value>0.9</value>
			</greater-than>
		</condition>
		<volume>
			<offset> 0.2 </offset>
		</volume>
	</power>
	-->

	<!-- engine -->
	<engineshutdown>
		<name>eshutdown</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/engine_s2_shutdown.wav</path>		<!-- 5.3 secs -->
		<condition>
			<and>
				<property>controls/sound/engineshutdown</property>
				<property>bell412/power/buses/state</property>
			</and>
		</condition>
		<pitch>
			<property>controls/sound/engineshutdown</property>
			<type>inv</type>
		</pitch>
		<reference-dist>5</reference-dist>
		<max-dist>20</max-dist>
	</engineshutdown>

	<engine_s1_gen>
		<name>s1gen</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_s1_gen.wav</path>
		<condition>
			<and>
				<or>
					<property>controls/engines/engine[0]/starter</property>
					<property>controls/engines/engine[1]/starter</property>
				</or>
				<property>bell412/power/buses/state</property>
			</and>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
		<reference-dist>2</reference-dist>
		<max-dist>50</max-dist>
	</engine_s1_gen>
	
	<engine_s2>
		<name>s2</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/engine_s21.wav</path>		<!-- 6 sec. -->
		<condition>
			<and>
				<or>
					<greater-than>
						<property>bell412/mechanics/engines/engine[0]/state</property>
						<value>1</value>
					</greater-than>
					<greater-than>
						<property>bell412/mechanics/engines/engine[1]/state</property>
						<value>1</value>
					</greater-than>
				</or>
				<property>bell412/power/buses/state</property>
			</and>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
		<reference-dist>5</reference-dist>
		<max-dist>60</max-dist>
	</engine_s2>

	<engine_s3>
		<name>s3</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/engine_s3.wav</path>
		<condition>
			<and>
				<or>
					<greater-than>
						<property>bell412/mechanics/engines/engine[0]/state</property>
						<value>2</value>
					</greater-than>
					<greater-than>
						<property>bell412/mechanics/engines/engine[1]/state</property>
						<value>2</value>
					</greater-than>
				</or>
				<property>bell412/power/buses/state</property>
			</and>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
		<reference-dist>5</reference-dist>
		<max-dist>90</max-dist>
	</engine_s3>


	<engine>
		<name>warmup</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/engine_startup2.wav</path>
		<condition>
			<greater-than>
				<property>sim/model/bell412/state</property>
				<value>0</value>
			</greater-than>
		</condition>
		<volume>
			<factor>1.2</factor>
		</volume>
		<reference-dist>20</reference-dist>
		<max-dist>500</max-dist>
	</engine>

	<rotor>	<!-- TODO : must be audible at 150 rpm only, but able to slow down below 150 -->
		<name>stage4</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step4.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>80</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
			<factor>1.00</factor>
			<type>ln</type>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.003300</factor> 	<!-- 324  -->
			<offset>0.0</offset>
			<min>0.5</min>
			<max>2.0</max>
		</pitch>
		<position>
			<x> -1.0 </x>
			<y> 0 </y>
			<z> 1.6 </z>
		</position>
		<reference-dist>25</reference-dist>
		<max-dist>500</max-dist>
	</rotor>

	<!-- ********************************************* 
		 inside 
		 *********************************************	-->
	<!-- stereo effects -->
	<rotor>
		<name>rotorinsideleft</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step3-left.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
		<position>
			<x> -1.56 </x>
			<y> 0.9 </y>
			<z> 1.4 </z>
		</position>
		<volume>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<factor>1.00</factor>
			<type>ln</type>
			<max>1.1</max>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<offset>-0.0</offset>
			<max>1.1</max>
		</pitch>
		<reference-dist>50</reference-dist>
		<max-dist>1000</max-dist>
	</rotor>
	<rotor>
		<name>rotorinsideright</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step3-right.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
		<position>
			<x> -1.56 </x>
			<y> -0.9 </y>
			<z> 1.4 </z>
		</position>
		<volume>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<factor>1.00</factor>
			<type>ln</type>
			<max>1.1</max>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<offset>-0.0</offset>
			<max>1.1</max>
		</pitch>
		<reference-dist>50</reference-dist>
		<max-dist>1000</max-dist>
	</rotor>

	<!-- ********************************************* 
		 outside 
		 *********************************************	-->
	<!-- rotor -->
	<rotor>
		<name>rotoroutside</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_outside.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<not>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.003125</factor>
			<offset>-0.0</offset>
			<max>2.5</max>
		</pitch>
		<position>
			<x> -4.9 </x>
			<y>  0.0 </y>
			<z>  1.5 </z>
		</position>
		<reference-dist>50</reference-dist>
		<max-dist>3000</max-dist>
	</rotor>

	<!-- tail -->
	<rotor>
		<name>tail_rotor</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/tailrotor.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<not>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
			<factor>0.80</factor>
		</volume>
		<pitch>
			<property>rotors/tail/rpm</property>
			<factor>0.0006</factor>
			<offset>-0.0</offset>
			<max>2.5</max>
		</pitch>
		<position>
			<x> -2 </x>
			<y> -0.4 </y>
			<z> 1.3 </z>
		</position>
		<orientation>
			<x> 1 </x>
			<y> . </y>
			<z> 0 </z>
			<inner-angle>110</inner-angle>
			<outer-angle>220</outer-angle>
			<outer-gain>0.1</outer-gain>
		</orientation>
		<reference-dist>30</reference-dist>
		<max-dist>2000</max-dist>
	</rotor>

	<!-- ********************************************* 
		 Misc effects
		 *********************************************	-->
	<alarm>
		<name>alarm</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/alarm.wav</path>
		<condition>
			<and>
				<property>/bell412/power/output/cautions/alarm</property>
				<not><property>controls/cautions/switches/reset</property></not>
			</and>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>50</max-dist>
		<volume>
			<offset> 1.0 </offset>
		</volume>
	</alarm>
	<alarmalt>
		<name>alarmalt</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/ground_alarm.wav</path>
		<condition>
			<and>
				<property>controls/instruments/radioalt/alarm</property>
				<not><property>controls/cautions/switches/reset</property></not>
			</and>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>5</max-dist>
		<volume>
			<property>controls/instruments/radioalt/alarm</property>
			<offset>0.2</offset>
		</volume>
	</alarmalt>
	<dooropen>
		<name>door open</name>
		<mode>once</mode>
		<path>Sounds/door-opening.wav</path>
		<condition>
			<greater-than>
				<property>controls/doors/soundopen</property>
				<value>0</value>
			</greater-than>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>50</max-dist>
		<volume>
			<offset> 1.0 </offset>
		</volume>
	</dooropen>
	<doorclose>
		<name>door close</name>
		<mode>once</mode>
		<path>Sounds/door-closing.wav</path>
		<condition>
			<greater-than>
				<property>controls/doors/soundclose</property>
				<value>0.9</value>
			</greater-than>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>50</max-dist>
		<volume>
			<offset> 1.0 </offset>
		</volume>
	</doorclose>
	<doorwarning>
		<name>door warning</name>
		<mode>looped</mode>
		<path>Sounds/door-chime.wav</path>
		<condition>
			<or>
				<property>controls/doors/front/left</property>
				<property>controls/doors/front/right</property>
			</or>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>10</max-dist>
		<volume>
			<offset> 1.0 </offset>
		</volume>
	</doorwarning>
	
	<startergrind>
		<name>starter grind 0</name>
		<mode>once</mode>
		<path>Sounds/engine-starter-grind.wav</path>
		<condition>
			<and>
				<property>bell412/power/output/engines/engine[0]/state</property>
				<property>controls/engines/engine[0]/starter</property>
				<not><property>bell412/mechanics/engines/engine[0]/runnable</property></not>
			</and>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>10</max-dist>
		<volume>
			<offset> 1.0 </offset>
		</volume>
	</startergrind>
	<startergrind>
		<name>starter grind 1</name>
		<mode>once</mode>
		<path>Sounds/engine-starter-grind.wav</path>
		<condition>
			<and>
				<property>bell412/power/output/engines/engine[1]/state</property>
				<property>controls/engines/engine[1]/starter</property>
				<not><property>bell412/mechanics/engines/engine[1]/runnable</property></not>
			</and>
		</condition>
		<reference-dist>2</reference-dist>
		<max-dist>10</max-dist>
		<volume>
			<offset>1.0</offset>
		</volume>
	</startergrind>

	<contact>
		<name>ground contact</name>
		<mode>once</mode>
		<path>Sounds/helicopter-skid.wav</path>
		<condition>
			<property>gear/gear[0]/wow</property>
			<property>gear/gear[1]/wow</property>
			<property>gear/gear[2]/wow</property>
			<property>gear/gear[3]/wow</property>
		</condition>
		<volume>
			<factor>0.8</factor>
		</volume>
		<pitch>
			<factor>0.01</factor>
		</pitch>
		<reference-dist>5.0</reference-dist>
		<max-dist>10.0</max-dist>
	</contact>

	<wind>
		<name>wind</name>
		<mode>looped</mode>
		<path>Sounds/wind.wav</path>
		<condition>
			<and>
				<property>velocities/airspeed-kt</property>
				<not>
					<property>sim/crashed</property>
				</not>
			</and>
		</condition>
		<volume>
			<property>velocities/airspeed-kt</property>
			<factor>0.0015</factor>
			<min>0.00</min>
			<max>0.25</max>
		</volume>
		<pitch>
			<property>velocities/airspeed-kt</property>
			<factor>0.01</factor>
			<offset>1.25</offset>
		</pitch>
		<reference-dist>5.0</reference-dist>
		<max-dist>10.0</max-dist>
	</wind>

	<crash>
		<name>intense ground contact</name>
		<mode>once</mode>
		<path>Sounds/crash.wav</path>
		<property>sim/crashed</property>
		<volume>
			<factor>1</factor>
		</volume>
		<pitch>
			<factor>0.1</factor>
		</pitch>
		<reference-dist>500</reference-dist>
		<max-dist>1000</max-dist>
	</crash>

</fx>
</PropertyList>
