<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
<fx>
	<!-- switch high pitch 'tick' -->
	<switch>
		<name>click on</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/click.wav</path>
		<condition>
			<property>/sim/sound/switch</property>
		</condition>
		<volume>
			<offset> 1 </offset>
		</volume>
		<pitch>
			<factor>1.2</factor>
		</pitch>
	</switch>
	<switch>
		<name>click off</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/click.wav</path>
		<condition>
			<not>
				<property>/sim/sound/switch</property>
			</not>
		</condition>
		<volume>
			<offset> 1 </offset>
		</volume>
		<pitch>
			<factor>1.2</factor>
		</pitch>
	</switch>
	<!-- switch button pushed -->
	<switch>
		<name>button on</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/switch2.wav</path>
		<condition>
			<property>/sim/sound/button</property>
		</condition>
		<volume>
			<offset>4.0 </offset>
		</volume>
	</switch>
	<switch>
		<name>button off</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/switch2.wav</path>
		<condition>
			<not>
				<property>/sim/sound/button</property>
			</not>
		</condition>
		<volume>
			<offset>4.0</offset>
		</volume>
		<pitch>
			<factor>0.75</factor>
		</pitch>
	</switch>

	<!-- power startup and air cond. -->
	<power>
		<name>powerup</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/powerOn.wav</path>
		<condition>
			<greater-than>
				<property>/bell412/power/buses</property>
				<value>0</value>
			</greater-than>
		</condition>
		<reference-dist>3</reference-dist>
		<max-dist>50</max-dist>
		<volume>
			<offset> 2.2 </offset>
		</volume>
		<pitch>
			<property>/bell412/power/buses</property>
			<factor>1</factor>
			<offset>0.0</offset>
			<max>1</max>
		</pitch>
	</power>
	<!--			TODO : air switch hi/low
	<power>
		<name>air conditioner</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/air_cond.wav</path>
		<condition>
			<greater-than>
				<property>/sim/sound/power</property>
				<value>0.9</value>
			</greater-than>
		</condition>
		<volume>
			<offset> 0.2 </offset>
		</volume>
	</power>
	-->

	<!-- engine -->
	<engine>
		<name>warmup</name>
		<mode>once</mode>
		<path>Aircraft/Bell-412/Sounds/engine_startup2.wav</path>
		<condition>
			<greater-than>
				<property>sim/model/bell412/state</property>
				<value>0</value>
			</greater-than>
		</condition>
		<volume>
			<factor>1.2</factor>
		</volume>
		<reference-dist>20</reference-dist>
		<max-dist>500</max-dist>
	</engine>

	<rotor>	<!-- TODO : must be audible at 150 rpm only, but able to slow down below 150 -->
		<name>stage4</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step4.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>100</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
			<factor>1.20</factor>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.004000</factor> 	<!-- 0.003125 -->
			<offset>0.0</offset>
			<max>1.0</max>
		</pitch>
		<position>
			<x> -1.0 </x>
			<y> 0 </y>
			<z> 1.6 </z>
		</position>
		<reference-dist>10</reference-dist>
		<max-dist>500</max-dist>
	</rotor>

	<!-- ********************************************* 
		 inside 
		 *********************************************	-->
	<!-- stereo effects -->
	<rotor>
		<name>rotorinsideleft</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step3-left.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
		<position>
			<x> -1.56 </x>
			<y> 0.9 </y>
			<z> 1.4 </z>
		</position>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<offset>-0.0</offset>
			<max>1.0</max>
		</pitch>
		<reference-dist>50</reference-dist>
		<max-dist>1000</max-dist>
	</rotor>
	<rotor>
		<name>rotorinsideright</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_step3-right.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
		<position>
			<x> -1.56 </x>
			<y> -0.9 </y>
			<z> 1.4 </z>
		</position>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.00325</factor>
			<offset>-0.0</offset>
			<max>1.0</max>
		</pitch>
		<reference-dist>50</reference-dist>
		<max-dist>1000</max-dist>
	</rotor>

	<!-- ********************************************* 
		 outside 
		 *********************************************	-->
	<!-- rotor -->
	<rotor>
		<name>rotoroutside</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/engine_outside.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<not>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
		</volume>
		<pitch>
			<property>rotors/main/rpm</property>
			<factor>0.003125</factor>
			<offset>-0.0</offset>
			<max>2.5</max>
		</pitch>
		<position>
			<x> -4.9 </x>
			<y>  0.0 </y>
			<z>  1.5 </z>
		</position>
		<reference-dist>50</reference-dist>
		<max-dist>3000</max-dist>
	</rotor>

	<!-- tail -->
	<rotor>
		<name>tail_rotor</name>
		<mode>looped</mode>
		<path>Aircraft/Bell-412/Sounds/tailrotor.wav</path>
		<condition>
			<and>
				<greater-than>
					<property>rotors/main/rpm</property>
					<value>50</value>
				</greater-than>
				<not>
					<property>sim/crashed</property>
				</not>
				<not>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</not>
			</and>
		</condition>
		<volume>
			<property>rotors/gear/torque-sound-filtered</property>
			<factor>0.80</factor>
		</volume>
		<pitch>
			<property>rotors/tail/rpm</property>
			<factor>0.0006</factor>
			<offset>-0.0</offset>
			<max>2.5</max>
		</pitch>
		<position>
			<x> -2 </x>
			<y> -0.4 </y>
			<z> 1.3 </z>
		</position>
		<orientation>
			<x> 1 </x>
			<y> . </y>
			<z> 0 </z>
			<inner-angle>110</inner-angle>
			<outer-angle>220</outer-angle>
			<outer-gain>0.1</outer-gain>
		</orientation>
		<reference-dist>30</reference-dist>
		<max-dist>2000</max-dist>
	</rotor>
	
	<!-- ********************************************* 
		 Misc effects
		 *********************************************	-->
	<contact>
		<name>ground contact</name>
		<mode>once</mode>
		<path>Sounds/helicopter-skid.wav</path>
		<condition>
			<property>gear/gear[0]/wow</property>
			<property>gear/gear[1]/wow</property>
			<property>gear/gear[2]/wow</property>
			<property>gear/gear[3]/wow</property>
		</condition>
		<volume>
			<factor>0.8</factor>
		</volume>
		<pitch>
			<factor>0.01</factor>
		</pitch>
		<reference-dist>5.0</reference-dist>
		<max-dist>10.0</max-dist>
	</contact>

	<wind>
		<name>wind</name>
		<mode>looped</mode>
		<path>Sounds/wind.wav</path>
		<condition>
			<and>
				<property>velocities/airspeed-kt</property>
				<not>
					<property>sim/crashed</property>
				</not>
			</and>
		</condition>
		<volume>
			<property>velocities/airspeed-kt</property>
			<factor>0.0015</factor>
			<min>0.00</min>
			<max>0.25</max>
		</volume>
		<pitch>
			<property>velocities/airspeed-kt</property>
			<factor>0.01</factor>
			<offset>1.25</offset>
		</pitch>
		<reference-dist>5.0</reference-dist>
		<max-dist>10.0</max-dist>
	</wind>

	<crash>
		<name>intense ground contact</name>
		<mode>once</mode>
		<path>Sounds/crash.wav</path>
		<property>sim/crashed</property>
		<volume>
			<factor>1</factor>
		</volume>
		<pitch>
			<factor>0.1</factor>
		</pitch>
		<reference-dist>500</reference-dist>
		<max-dist>1000</max-dist>
	</crash>

</fx>
</PropertyList>
